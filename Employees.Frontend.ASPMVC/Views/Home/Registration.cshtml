@model Employees.Frontend.ASPMVC.Models.RegistrationModel
@inject Employees.Frontend.ASPMVC.Services.Interfaces.IDepartmentService department
@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employees.Frontend.ASPMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="text-center row justify-content-center" >
        <form asp-action="Registration">
            <div asp-validation-summary="All">
                <div class="form-group">
                    <label asp-for="Login">Login</label>
                    <input class="form-control maxlength="30"  asp-for="Login" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input type="password" class="form-control" maxlength="30" asp-for="Password" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Password</label>
                    <input type="password" class="form-control" maxlength="30" asp-for="ConfirmPassword" />
                </div>
                <div class="form-group">
                    <label asp-for="DepartmentId">Department</label>
                    <select class="form-control" asp-for="DepartmentId">
                        <option value = "">Choose department</option>
                        @foreach(var department in await department.GetDepartments())
                        {
                            <option value = "@department.Id">@department.Name, Floor - @department.Floor</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login"/>
                </div>
            </div>
        </form>
    </div>

</body>

